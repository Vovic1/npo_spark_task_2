<Window x:Class="WpfApp1.EditDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Dialog" Height="335" Width="367">
    <Grid Height="301" VerticalAlignment="Top">
        <DataGrid x:Name="grid1" Margin="20,20,20,74" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Key" Binding="{Binding Key}"/>
                <DataGridTextColumn Header="Value" Binding="{Binding Value}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="bttOk" Content="Ok" HorizontalAlignment="Left" Margin="28,269,0,0" VerticalAlignment="Top" RenderTransformOrigin="-3.715,0.845" Width="85" Click="OK_Button_Click"/>
        <Button x:Name="btnCan" Content="Cancel" HorizontalAlignment="Left" Margin="242,267,0,0" VerticalAlignment="Top" Height="24" Width="87" Click="Cancel_Button_Click"/>
    </Grid>
</Window>
